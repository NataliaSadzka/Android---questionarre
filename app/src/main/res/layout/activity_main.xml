<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" android:textColor="#71B81F"
            android:textStyle="bold" android:paddingBottom="700dp"
    />
    <TextView
            android:text="Ankieta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textSize="25sp" android:textColor="#2BD332"
            android:textColorLink="#FFFFFF" android:textStyle="bold" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
    <CheckBox
            android:text="Temperatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox"
            android:layout_above="@id/checkBox2"/>
    <CheckBox
            android:text="Czas przechowywania"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox2"
            android:layout_above="@id/checkBox3"/>
    <CheckBox
            android:text="Wilgotność atmosfery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox3"
            android:layout_above="@id/checkBox4"/>
    <CheckBox
            android:text="Kondensacja pary wodnej"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox4"
            android:layout_centerInParent="false" android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false" android:layout_alignParentBottom="false"
            android:layout_above="@id/checkBox5"/>
    <CheckBox
            android:text="Skład atmosfery gazowej"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox5"
            android:layout_alignParentTop="false" android:layout_centerInParent="false"
            android:layout_centerVertical="true"/>
    <Button
            android:text="Wyniki"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:textColor="#19191B"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerInParent="false" android:layout_alignParentBottom="true"
            android:layout_above="@id/checkBox5" android:layout_marginBottom="50dp" android:layout_marginLeft="10dp"
            android:textColorLink="#21D6C5" android:textColorHighlight="#D33030"
            android:textColorHint="#1BE3D0" style="@style/Widget.AppCompat.Button.Colored"/>
    <TextView
            android:text="Który parametr fizyczny ma największy wpływ na owoce?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textColor="#6DB618" android:textStyle="bold" android:layout_above="@id/checkBox"
            android:layout_marginBottom="130dp" android:layout_marginLeft="15dp" android:textSize="15sp"/>
    <Button
            android:text="Zakończ"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            android:textColor="#090909" android:layout_alignParentBottom="true" android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true" android:layout_above="@id/checkBox5"
            android:layout_marginRight="10dp" android:layout_marginBottom="50dp"
            style="@style/Widget.AppCompat.Button.Colored"/>
    <TextView
            android:text="TextView"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_above="@id/button"
            android:layout_marginLeft="160dp" android:visibility="invisible"/>

</RelativeLayout>